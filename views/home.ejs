                    <h3> <%= pergunta.titulo %> </h3>
                </div>

                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>  "> <button>Responder</button> </a>
                    
                </div>

            </div>
            
    <% }) %> 
  </div>
</body>


